{
  "manifest_version": 3,
  "name": "AT helper",
  "version": "1.0.2",

  "description": "__MSG_extensionDescription__",

  "default_locale": "ru",

  "icons": {
    "32": "icons/at-32.png",
    "48": "icons/at-48.png",
    "64": "icons/at-64.png",
    "96": "icons/at-96.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://author.today/*"
      ],
      "js": [
        "js/browser-polyfill.js",
        "js/index.js"
      ],
      "css": ["css/main.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://author.today/u/*/works/edit"
      ],
      "js": ["js/works-edit-page.js"]
    },
    {
      "matches": [
        "https://author.today/reader/*"
      ],
      "js": ["js/reader-page.js"]
    },
    {
      "matches": [
        "https://author.today/work/*"
      ],
      "js": ["js/work-page.js"]
    }
  ],

  "action": {
    "default_icon": {
      "16": "icons/at-16.png",
      "24": "icons/at-24.png",
      "32": "icons/at-32.png"
    },
    "default_title": "AT helper",
    "default_popup": "popup/index.html"
  },

  "developer": {
    "name": "Egor Mikhno",
    "url": "https://github.com/emikhno/AT-helper"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "AThelper@emikhno.com"
    }
  }
}
